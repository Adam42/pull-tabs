{
    "manifest_version": 2,

    "name": "Pull Tabs",
    "description":
        "Save open tabs to disk as files or put them in your Pocket.",
    "version": "0.14.1",
    "permissions": [
        "tabs",
        "downloads",
        "identity",
        "bookmarks",
        "storage",

        "https://getpocket.com/v3/*"
    ],
    "optional_permissions": ["http://*/*", "https://*/*"],
    "web_accessible_resources": ["pocket.html"],

    "browser_action": {
        "default_icon": {
            "19": "img/icon-19.png",
            "38": "img/icon-38.png"
        },
        "default_popup": "popup.html",
        "default_title": "Pull Tabs"
    },