{
    "manifest_version": 2,

    "name": "Pull Tabs",
    "description": "Save open tabs to disk as files or to put them in your Pocket.",
    "version": "0.8",
    "options_page": "options.html",

    "permissions": [
        "tabs",
        "downloads",
        "identity",
        "http://*/*",
        "https://*/*",
        "https://getpocket.com/v3/*"
    ],

    "web_accessible_resources": [
        "chrome-extension://jhmcfppppedffaabfckmcgokchccekgn/pocket/*"
    ],

    "browser_action": {
        "default_icon": {
            "19": "icon-19.png",
            "38": "icon-38.png"
        },
        "default_popup": "popup.html",
        "default_title": "Pull Tabs"
    }
}
